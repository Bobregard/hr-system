@using HrSystem.Models;
@model IEnumerable<Job>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Job List</h2>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("Hr"))
        {
            <div class="col-6 text-end">
                <a asp-controller="Jobs" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp Create New Job
                </a>
            </div>
        }
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Requirements
            </th>
            <th>
                Category
            </th>
            <th>
                Company
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td width="50%">
                    @job.Title
                </td>
                <td width="30%">
                    @job.Requirements
                </td>
                <td width="30%">
                    @job.CategoryId
                </td>
                <td width="30%">
                    @job.CompanyId
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Jobs" asp-action="Edit" asp-route-id="@job.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-danger mx-2" asp-controller="Jobs" asp-action="Delete" asp-route-id="@job.Id"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

