@using HrSystem.VIewModels;
@model JobViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Job</h2>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Job.Title"></label>
            <input asp-for="Job.Title" class="form-control" />
            <span asp-validation-for="Job.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Job.Requirements"></label>
            <input asp-for="Job.Requirements" class="form-control" />
            <span asp-validation-for="Job.Requirements" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Job.CategoryId">Category</label>
            <select asp-for="Job.CategoryId" asp-items="Model.CategoriesList" class="form-select">
                <option>--Select Category--</option>
            </select>
            <span asp-validation-for="Job.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Job.CompanyId">Company</label>
            <select asp-for="Job.CompanyId" asp-items="Model.CompaniesList" class="form-select">
                <option>--Select Company--</option>
            </select>
            <span asp-validation-for="Job.CompanyId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
