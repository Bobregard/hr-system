@using HrSystem.Models;
@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Companies" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create New Company
            </a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Description
            </th>
            <th>
                Logo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td width="30%">
                    @company.Name
                </td>
                <td width="50%">
                    @company.Description
                </td>
                <td width="30%">
                    <img src="@company.LogoUrl" width="100">
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Companies" asp-action="Edit" asp-route-id="@company.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a class="btn btn-danger mx-2" asp-controller="Companies" asp-action="Delete" asp-route-id="@company.Id"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

